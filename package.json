{
  "name": "@qrx/qrcode",
  "version": "0.0.1",
  "description": "The modern, zero-dependency successor to qrcodejs. Built in TypeScript for the web, focusing on performance and type-safety for Canvas rendering",
  "scripts": {
    "build": "tsup",
    "format": "prettier --write \"src/**/*.ts\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.{js,json,md}\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "pnpm run build && pnpm run test:run && pnpm run lint",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit"
  },
  "author": "OctaEDLP00",
  "bugs": {
    "url": "https://github.com/OctaEDLP00/QrCode/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/eslint": "9.6.1",
    "@types/node": "25.0.10",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "eslint": "9.39.2",
    "eslint-config-love": "147.0.0",
    "eslint-config-prettier": "10.1.8",
    "globals": "17.2.0",
    "happy-dom": "20.3.7",
    "jiti": "^2.6.1",
    "prettier": "3.8.1",
    "tsup": "8.5.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./package.json": "./package.json"
  },
  "browser": "./index.browser.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json",
    "tsconfig.json"
  ],
  "homepage": "https://github.com/OctaEDLP00/QrCode#readme",
  "keywords": [
    "typescript",
    "qrcode",
    "web",
    "canvas",
    "ems",
    "tree-shaking",
    "zero-dependency"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OctaEDLP00/QrCode.git"
  },
  "type": "module",
  "types": "./index.d.ts"
}
